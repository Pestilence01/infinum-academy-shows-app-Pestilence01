<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/on_boarding_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.shows_lovre_nincevic_pestilence01.fragments.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_showsFragment"
            app:destination="@id/navigation"
            app:enterAnim="@anim/enter_anim"
            app:exitAnim="@anim/exit_anim"
            app:popEnterAnim="@anim/pop_enter_anim"
            app:popExitAnim="@anim/pop_exit_anim"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <navigation android:id="@+id/navigation"
        app:startDestination="@id/showsFragment"
        >
        <fragment
            android:id="@+id/showsFragment"
            android:name="com.example.shows_lovre_nincevic_pestilence01.fragments.ShowsFragment"
            tools:layout="@layout/fragment_shows"
            app:popUpToInclusive="true"
            >

            <action
                android:id="@+id/action_showsFragment_to_showDetailsFragment"
                app:destination="@id/showDetailsFragment"
                app:enterAnim="@anim/enter_anim"
                app:exitAnim="@anim/exit_anim"
                app:popEnterAnim="@anim/pop_enter_anim"
                app:popExitAnim="@anim/pop_exit_anim" />
            <action
                android:id="@+id/action_showsFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:enterAnim="@anim/enter_anim"
                app:exitAnim="@anim/exit_anim"
                app:popEnterAnim="@anim/pop_enter_anim"
                app:popExitAnim="@anim/pop_exit_anim"
                app:popUpTo="@id/navigation" />
        </fragment>
        <fragment
            android:id="@+id/showDetailsFragment"
            android:name="com.example.shows_lovre_nincevic_pestilence01.fragments.ShowDetailsFragment"
            tools:layout="@layout/fragment_show_details">

        </fragment>

    </navigation>


</navigation>